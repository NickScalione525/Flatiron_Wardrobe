

<%= form_for(@style) do |f|%>

<%=f.label "Name"%>
<%=f.text_field(:name)%>
<%=f.label "Era"%>
<%=f.text_field(:era)%>
<% if !@outfit%>
<%=f.label "Outfit"%>
<%=f.collection_select(:outfit_id, @outfits, :id, :name) "Name"%>
<%else%>
<%=f.hidden_field :outfit.name %>
<%end%>
<%=f.submit("Submit")%>
<%end%>
